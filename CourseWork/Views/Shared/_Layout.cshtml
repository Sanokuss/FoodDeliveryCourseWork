<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BodanFood</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile-fixes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    
    <!-- Top Navigation -->
    <nav class="navbar">
        <div class="container nav-container">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="Index" class="nav-logo" style="font-family: 'Pacifico', cursive; font-size: 1.8rem;">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512" fill="#ea7c69">
                    <path d="M410.6 123.6c-48-52.6-118.8-83.6-194.6-83.6-75.8 0-146.6 31.1-194.6 83.6-4.5 5-8.8 10.2-12.7 15.6l205.3 330.8c.8 1.4 2.4 2.2 4 2.2s3.2-.8 4-2.2l205.3-330.8c-3.9-5.4-8.2-10.6-12.7-15.6zM266 112c16.6 0 30 13.4 30 30s-13.4 30-30 30-30-13.4-30-30 13.4-30 30-30zm-80 80c16.6 0 30 13.4 30 30s-13.4 30-30 30-30-13.4-30-30 13.4-30 30-30zm60 140c-16.6 0-30-13.4-30-30s13.4-30 30-30 30 13.4 30 30-13.4 30-30 30zm80-110c-16.6 0-30-13.4-30-30s13.4-30 30-30 30 13.4 30 30-13.4 30 30 30z"/>
                </svg>
                BF
            </a>

            <!-- Central Links (Desktop) -->
            <ul class="nav-links d-none d-md-flex">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">Головна</a></li>
                <li><a asp-controller="Restaurants" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Restaurants" ? "active" : "")">Ресторани</a></li>
                <li><a asp-controller="Promotions" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Promotions" ? "active" : "")">Акції</a></li>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Restaurants" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Promotions" ? "active" : "")" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @(User.IsInRole("Admin") ? "Адмін" : "Менеджер")
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Дашборд</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Restaurants" asp-action="Index">🍽️ Ресторани</a></li>
                            <li><a class="dropdown-item" asp-controller="Promotions" asp-action="Index">🔥 Акції</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Products">📦 Товари</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Orders">📝 Замовлення</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">👥 Користувачі</a></li>
                            }
                        </ul>
                    </li>
                }
            </ul>

            <!-- Right Actions -->
            <div class="nav-actions">
                <!-- Theme Toggle -->
                <button id="themeToggle" class="theme-toggle" title="Змінити тему">
                   <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
                   <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
                </button>

                <!-- Search (Icon only for header) -->
                <!-- Search (Mobile) -->
                <a href="#hero-search" class="theme-toggle d-sm-none" style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </a>

                <!-- Cart -->
                <button type="button" class="nav-cart-btn" id="openCartSidebar" aria-label="Відкрити кошик">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
                    @await Component.InvokeAsync("CartSummary")
                </button>

                <!-- Auth Buttons -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Desktop Profile Button -->
                    <a asp-controller="Profile" asp-action="Index" class="btn-login profile-btn d-none d-md-flex">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                        @(User.IsInRole("Admin") ? "Кабінет" : "Мій кабінет")
                    </a>
                    
                    <!-- Mobile Profile Icon (NEW) -->
                    <a asp-controller="Profile" asp-action="Index" class="nav-cart-btn d-md-none ms-2" style="border-radius: 50%; width: 40px; height: 40px;">
                         <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                    </a>
                }
                else
                {
                    <div class="d-none d-md-flex gap-2">
                        <a asp-controller="Account" asp-action="Login" class="btn-login">Вхід</a>
                        <a asp-controller="Account" asp-action="Register" class="btn-register">Реєстрація</a>
                    </div>
                     <!-- Mobile Login Icon (NEW) -->
                    <a asp-controller="Account" asp-action="Login" class="nav-cart-btn d-md-none ms-2" style="border-radius: 50%; width: 40px; height: 40px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path><polyline points="10 17 15 12 10 7"></polyline><line x1="15" y1="12" x2="3" y2="12"></line></svg>
                    </a>
                }
                <!-- Mobile Burger Menu Button -->
                <button class="mobile-menu-btn d-md-none ms-2" id="mobileMenuBtn" aria-label="Відкрити меню">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>
            </div>
        </div>
    </nav>

    <!-- Mobile Drawer Menu -->
    <div class="mobile-drawer" id="mobileDrawer">
        <div class="mobile-drawer-header">
            @if (User.Identity?.IsAuthenticated == true)
            {
                 <div class="d-flex align-items-center gap-3">
                    <div class="drawer-user-avatar">
                        <span style="font-size: 1.5rem;">👤</span>
                    </div>
                    <div>
                        <div class="fw-bold">@User.Identity.Name</div>
                         <small class="text-muted">@(User.IsInRole("Admin") ? "Адміністратор" : "Користувач")</small>
                    </div>
                </div>
            }
            else
            {
                <span class="nav-logo" style="font-family: 'Pacifico', cursive;">BodanFood</span>
            }
            
            <button class="mobile-drawer-close" id="mobileDrawerClose" aria-label="Закрити меню">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <nav class="mobile-drawer-nav">
            <a asp-controller="Home" asp-action="Index" class="mobile-nav-link">
                <span class="icon">🏠</span> Головна
            </a>
            <a asp-controller="Restaurants" asp-action="Index" class="mobile-nav-link">
                <span class="icon">🍽️</span> Ресторани
            </a>
            <a asp-controller="Promotions" asp-action="Index" class="mobile-nav-link">
                <span class="icon">🔥</span> Акції
            </a>
            <a href="javascript:void(0)" class="mobile-nav-link" onclick="document.getElementById('mobileDrawer').classList.remove('active'); document.getElementById('mobileDrawerOverlay').classList.remove('active'); document.getElementById('openCartSidebar').click();">
                <span class="icon">🛒</span> Кошик
            </a>
            <hr class="my-2" style="border-color: rgba(0,0,0,0.1);">
            @if (User.Identity?.IsAuthenticated == true)

            {
                <a asp-controller="Profile" asp-action="Index" class="mobile-nav-link">👤 Мій Кабінет</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="mobile-nav-link">⚙️ Адмін</a>
                }
                else if (User.IsInRole("Manager"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="mobile-nav-link">🛠️ Менеджер</a>
                }
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="mobile-nav-link">🔑 Вхід</a>
                <a asp-controller="Account" asp-action="Register" class="mobile-nav-link">✍️ Реєстрація</a>
            }
        </nav>
    </div>
    <div class="mobile-drawer-overlay" id="mobileDrawerOverlay"></div>

    <!-- Main Content -->
    <main role="main" class="page-transition">
        @RenderBody()
    </main>

    <!-- Footer -->
    <!-- Footer -->
    <footer class="text-center py-4 mt-5 border-top" style="border-color: var(--border-color) !important;">
        <p class="text-muted mb-0">&copy; 2026 BodanFood. Всі права захищено.</p>
    </footer>
    
    <!-- Global Modal Container -->
    <div id="modal-container"></div>

    <!-- Cart Sidebar (Offcanvas) -->
    <div class="cart-sidebar-overlay" id="cartSidebarOverlay"></div>
    <div class="cart-sidebar" id="cartSidebar">
        <div id="cart-sidebar-content">
            <!-- Content loaded via AJAX -->
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/toast.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart-sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
