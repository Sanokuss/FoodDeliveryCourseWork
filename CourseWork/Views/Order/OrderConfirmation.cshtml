@model Order
@{
    ViewData["Title"] = "Підтвердження замовлення";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container">
    <div class="confirmation-container fade-in">
        <div class="confirmation-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="green" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 2.604 6.3a.75.75 0 0 0-1.208.9l3.5 4.5a.75.75 0 0 0 1.206 0l4.5-5.5a.75.75 0 0 0-.131-1.027z"/>
            </svg>
        </div>
        <h1 class="confirmation-title">Замовлення успішно оплачено!</h1>
        <p class="confirmation-message">Дякуємо за ваше замовлення</p>
        
        <div class="order-details-card card">
            <div class="card-body">
                <h5 class="card-title">Деталі замовлення</h5>
                <p><strong>Номер замовлення:</strong> #@Model.Id</p>
                <p><strong>Ім'я:</strong> @Model.CustomerName</p>
                <p><strong>Телефон:</strong> @Model.CustomerPhone</p>
                <p><strong>Адреса:</strong> @Model.CustomerAddress</p>
                <p><strong>Сума:</strong> @Model.TotalAmount.ToString("0.00") ₴</p>
                <p><strong>Статус:</strong> <span class="badge bg-success status-badge">Оплачено</span></p>
            </div>
        </div>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Повернутися на головну</a>
        </div>
    </div>
</div>

