@model Order
@{
    ViewData["Title"] = "Помилка оплати";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container">
    <div class="failure-container fade-in">
        <div class="failure-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
            </svg>
        </div>
        <h1 class="failure-title">Оплата не завершена</h1>
        <p class="failure-message">Ваше замовлення не було оплачено</p>
        
        @if (Model != null)
        {
            <div class="order-details-card card">
                <div class="card-body">
                    <h5 class="card-title">Номер замовлення: #@Model.Id</h5>
                    <p>Ви можете спробувати оформити замовлення ще раз</p>
                </div>
            </div>
        }

        <div class="failure-actions">
            <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Повернутися до кошика</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На головну</a>
        </div>
    </div>
</div>

