@model LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4 checkout-header">Вхід</h1>
            <form asp-action="Login" method="post" class="checkout-form">
                <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Помилка!</strong>
                        <div asp-validation-summary="All" class="mb-0"></div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="example@email.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Введіть пароль" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <div class="checkout-actions">
                    <button type="submit" class="btn btn-primary">Увійти</button>
                    <a asp-action="Register" class="btn btn-secondary">Немає акаунту? Зареєструватися</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

