@model RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4 checkout-header">Реєстрація</h1>
            <form asp-action="Register" method="post" class="checkout-form">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Помилка!</strong>
                        <div asp-validation-summary="All" class="mb-0"></div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Введіть ваше повне ім'я" required />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="example@email.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Введіть адресу (необов'язково)" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Мінімум 6 символів" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Підтвердіть пароль" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="checkout-actions">
                    <button type="submit" class="btn btn-primary">Зареєструватися</button>
                    <a asp-action="Login" class="btn btn-secondary">Вже маєте акаунт? Увійти</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

