@model Product
@{
    ViewData["Title"] = "Додати товар";
    var categories = ViewBag.Categories as List<Category>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
}

<div class="container fade-in">
    <h1 class="mb-4 checkout-header">Додати товар</h1>
    <form asp-action="CreateProduct" method="post" class="checkout-form">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Назва</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Опис</label>
            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Ціна</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">URL зображення</label>
            <input asp-for="ImageUrl" class="form-control" required />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

            <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Категорія</label>
            <select asp-for="CategoryId" class="form-control" required>
                <option value="">Оберіть категорію</option>
                @if (categories != null)
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RestaurantId" class="form-label">Ресторан</label>
            <select asp-for="RestaurantId" class="form-control" required>
                <option value="">Оберіть ресторан</option>
                @if (ViewBag.Restaurants != null)
                {
                    @foreach (var restaurant in (IEnumerable<Restaurant>)ViewBag.Restaurants)
                    {
                        <option value="@restaurant.Id">@restaurant.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="RestaurantId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="form-check form-switch">
                <input asp-for="IsNew" class="form-check-input" type="checkbox" id="isNewCheck">
                <label class="form-check-label" for="isNewCheck">
                    Новинка
                </label>
            </div>
        </div>

        <div class="mb-3">
            <div class="form-check form-switch">
                <input asp-for="IsBestSeller" class="form-check-input" type="checkbox" id="isBestSellerCheck">
                <label class="form-check-label" for="isBestSellerCheck">
                    Хіт продаж
                </label>
            </div>
        </div>

        <div class="checkout-actions">
            <button type="submit" class="btn btn-primary">Додати товар</button>
            <a asp-action="Products" class="btn btn-secondary">Скасувати</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

