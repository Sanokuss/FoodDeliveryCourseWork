@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Управління користувачами";
    var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>>;
    var allRoles = ViewBag.AllRoles as List<string>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Управління користувачами</h1>
        <a asp-action="Index" class="btn btn-secondary">Назад до панелі</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Помилка!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Повне ім'я</th>
                    <th>Адреса</th>
                    <th>Ролі</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var roles = userRoles?.ContainsKey(user.Id) == true ? userRoles[user.Id] : new List<string>();
                    var isAdmin = roles.Contains("Admin");
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@(user.FullName ?? "Не вказано")</td>
                        <td>@(user.Address ?? "Не вказано")</td>
                        <td>
                            @if (roles.Contains("Admin"))
                            {
                                <span class="badge bg-danger mb-1">Адміністратор</span>
                            }
                            @if (roles.Contains("Manager"))
                            {
                                <span class="badge bg-primary mb-1">Менеджер</span>
                            }
                            @if (!roles.Contains("Admin") && !roles.Contains("Manager"))
                            {
                                <span class="badge bg-secondary">Користувач</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <!-- Admin Toggle -->
                                <form asp-action="ToggleRole" 
                                      asp-route-userId="@user.Id" 
                                      asp-route-role="Admin" 
                                      asp-route-enable="@(!isAdmin)" 
                                      method="post" class="d-inline">
                                    
                                    @if (isAdmin)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Забрати права адміна"
                                                onclick="return confirm('Забрати права Адміністратора?');">
                                            - Адмін
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Надати права адміна"
                                                onclick="return confirm('Надати права Адміністратора?');">
                                            + Адмін
                                        </button>
                                    }
                                </form>

                                <!-- Manager Toggle -->
                                @{ var isManager = roles.Contains("Manager"); }
                                <form asp-action="ToggleRole" 
                                      asp-route-userId="@user.Id" 
                                      asp-route-role="Manager" 
                                      asp-route-enable="@(!isManager)" 
                                      method="post" class="d-inline">
                                    
                                    @if (isManager)
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-primary" title="Забрати права менеджера"
                                                onclick="return confirm('Забрати права Менеджера?');">
                                            - Менеджер
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-outline-info" title="Надати права менеджера"
                                                onclick="return confirm('Надати права Менеджера?');">
                                            + Менеджер
                                        </button>
                                    }
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

